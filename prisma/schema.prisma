enum OrderStatus {
    PENDING
    PROCESSING
    SHIPPED
    DELIVERED
    CANCELLED
}

enum CosmeticType {
    SKINCARE
    MAKEUP
    HAIRCARE
    FRAGRANCE
    BODYCARE
    NAILCARE
    OTHER
}

enum PaymentStatus {
    PENDING
    COMPLETED
    FAILED
    CANCELLED
}

enum UserStatus {
    ACTIVE
    INACTIVE
    BANNED
}
